<div class="container">
  <div class="row">
    <div class="col-md-6 sign-up col-md-offset-3">
      <h1>Edit</h1>

      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>
          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with(model: @user, local: true) do |f| %>  
        <%= f.label :名前 %>
        <br>
        <%= f.text_field :name, placeholder: "ユーザー名" %>
        <br>

        <%= f.label :メールアドレス %>
        <br>
        <%= f.email_field :email, placeholder: "メールアドレス" %>
        <br>

        <%= f.label :パスワード %>
        <br>
        <%= f.password_field :password, placeholder: "パスワード" %>
        <br>

        <%= f.label :パスワード確認 %>
        <br>
        <%= f.password_field :password_confirmation, placeholder: "パスワード" %>
        <br>

        <%= f.label :プロフィール %>
        <br>
        <%= f.text_field :profile, placeholder: "プロフィール" %>
        <br>

        <%= f.label :プロフィール写真 %>
        <br>
        <%= f.file_field :profile_image %>
        <br>
        <%= f.hidden_field :profile_image_cache %>
        <br>

        <%= f.submit "変更する" %>
      <% end %> 
    </div>
  </div>
</div>