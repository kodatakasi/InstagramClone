<div class="container">
  <div class="row pictures">
    <p id="notice"><%= notice %></p>

    <h1 class="title col-md-6 col-md-offset-3">Photo</h1>

    <table class="table table-hover ">
      <thead>
        <tr>
          <th>Photo</th>
          <th>コメント</th>
          <th>投稿者</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @pictures.each do |picture| %>
          <tr>
            <td><%= image_tag picture.image.url %></td>
            <td><%= picture.content %></td>
            <td><%= picture.user.name %></td>
            <td><%= link_to 'Show', picture, class: 'btn btn-primary' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <%= link_to 'New Picture', new_picture_path, class: 'btn btn-primary' %>
    <%= link_to 'My Page', user_path(@user.id), class: 'btn btn-primary'%>
  </div>
</div>