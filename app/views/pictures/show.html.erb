<div class="container">
  <div class="row col-md-6 col-md-offset-3 picture-col">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Image:</strong>
      <%= image_tag @picture.image.url %>
    </p>

    <p>
      <strong>Content:</strong>
      <%= @picture.content %>
    </p>
    <% if current_user.id == @picture.user_id %>
      <%= link_to '編集', edit_picture_path(@picture), class: 'btn btn-primary' %>
      <%= link_to '削除', @picture, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %>
    <% end %>

      <% if @favorite.present? %>
        <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
      <% else %>
        <%= link_to 'お気に入りする', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
      <% end %>
    <%= link_to '戻る', pictures_path, class: 'btn btn-primary' %>
  </div>
</div>
